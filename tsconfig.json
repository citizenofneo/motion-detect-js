{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "./public/",
        "sourceMap": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "removeComments": true,
        // "declaration": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true
    }
}